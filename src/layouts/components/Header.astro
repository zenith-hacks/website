---
import HeaderLink from "./HeaderLink.astro";
import Logo from "@src/assets/img/icon.png";
import { Image } from "astro:assets";

const menu = [
   {
      link: "/#about",
      label: "About"
   },
   {
      link: "/#sponsors",
      label: "Sponsors"
   }
];
---

<!--
